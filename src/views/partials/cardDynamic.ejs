<li class="glide__slide">
  <article class="articulo">
    <a href="/shop/item/:<%=producto.id %>">
      <div class="nuevo">Nuevo</div>
      <picture class="articulo__cover">
        <img
          class="articulo__img--back"
          src="<%= producto.image_back %>"
          alt="<%= producto.product_name %>"
        />
        <img
          class="articulo__img--front"
          src="<%= producto.image_front %>"
          alt="<%= producto.product_name %>"
        />
      </picture>
      <div>
        <p class="articulo_franquicia"><%= producto.license_id %></p>
        <h4 class="articulo_titulo"><%= producto.product_name %></h4>
        <p class="articulo_precio">$&nbsp;<%= producto.price %></p>
        <p class="articulo_cuotas"><%= producto.dues %></p>
      </div>
    </a>
  </article>
</li>
